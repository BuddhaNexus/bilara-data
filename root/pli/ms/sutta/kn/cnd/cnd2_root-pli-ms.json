{
  "cnd2:0.1": "Cūḷaniddesa",
  "cnd2:0.2": "Pārāyanavaggagāthā",
  "cnd2:0.3": "Pucchā",
  "cnd2:1.0.1": "1. Ajitamāṇavapucchā",
  "cnd2:1.1": "“Kenassu nivuto loko,\n(iccāyasmā ajito)",
  "cnd2:1.2": "Kenassu nappakāsati;",
  "cnd2:1.3": "Kissābhilepanaṃ brūsi,",
  "cnd2:1.4": "Kiṃsu tassa mahabbhayaṃ”. (1)",
  "cnd2:2.1": "“Avijjāya nivuto loko,\n(ajitāti bhagavā)",
  "cnd2:2.2": "Vevicchā pamādā nappakāsati;",
  "cnd2:2.3": "Jappābhilepanaṃ brūmi,",
  "cnd2:2.4": "Dukkhamassa mahabbhayaṃ”. (2)",
  "cnd2:3.1": "“Savanti sabbadhi sotā,\n(iccāyasmā ajito)",
  "cnd2:3.2": "Sotānaṃ kiṃ nivāraṇaṃ;",
  "cnd2:3.3": "Sotānaṃ saṃvaraṃ brūhi,",
  "cnd2:3.4": "Kena sotā pidhiyyare”. (3)",
  "cnd2:4.1": "“Yāni sotāni lokasmiṃ,\n(ajitāti bhagavā)",
  "cnd2:4.2": "Sati tesaṃ nivāraṇaṃ;",
  "cnd2:4.3": "Sotānaṃ saṃvaraṃ brūmi,",
  "cnd2:4.4": "Paññāyete pidhiyyare”. (4)",
  "cnd2:5.1": "“Paññā ceva sati cāpi,\n(iccāyasmā ajito)",
  "cnd2:5.2": "Nāmarūpañca mārisa;",
  "cnd2:5.3": "Etaṃ me puṭṭho pabrūhi,",
  "cnd2:5.4": "Katthetaṃ uparujjhati”. (5)",
  "cnd2:6.1": "“Yametaṃ pañhaṃ apucchi,",
  "cnd2:6.2": "ajita taṃ vadāmi te;",
  "cnd2:6.3": "Yattha nāmañca rūpañca,",
  "cnd2:6.4": "asesaṃ uparujjhati;",
  "cnd2:6.5": "Viññāṇassa nirodhena,",
  "cnd2:6.6": "etthetaṃ uparujjhati”. (6)",
  "cnd2:7.1": "“Ye ca saṅkhātadhammāse,",
  "cnd2:7.2": "ye ca sekhā puthū idha;",
  "cnd2:7.3": "Tesaṃ me nipako iriyaṃ,",
  "cnd2:7.4": "puṭṭho pabrūhi mārisa”. (7)",
  "cnd2:8.1": "“Kāmesu nābhigijjheyya,",
  "cnd2:8.2": "Manasānāvilo siyā;",
  "cnd2:8.3": "Kusalo sabbadhammānaṃ,",
  "cnd2:8.4": "Sato bhikkhu paribbaje”ti. (8)",
  "cnd2:8.5": "Ajitamāṇavapucchā paṭhamā.",
  "cnd2:9.0": "2. Tissametteyyamāṇavapucchā",
  "cnd2:9.1": "“Kodha santusito loke,\n(iccāyasmā tissametteyyo)",
  "cnd2:9.2": "Kassa no santi iñjitā;",
  "cnd2:9.3": "Ko ubhantamabhiññāya,",
  "cnd2:9.4": "Majjhe mantā na lippati;",
  "cnd2:9.5": "Kaṃ brūsi mahāpurisoti,",
  "cnd2:9.6": "Ko idha sibbinimaccagā”. (1)",
  "cnd2:10.1": "“Kāmesu brahmacariyavā,\n(metteyyāti bhagavā)",
  "cnd2:10.2": "Vītataṇho sadā sato;",
  "cnd2:10.3": "Saṅkhāya nibbuto bhikkhu,",
  "cnd2:10.4": "Tassa no santi iñjitā. (2)",
  "cnd2:11.1": "So ubhantamabhiññāya,",
  "cnd2:11.2": "Majjhe mantā na lippati;",
  "cnd2:11.3": "Taṃ brūmi mahāpurisoti,",
  "cnd2:11.4": "So idha sibbinimaccagā”ti. (3)",
  "cnd2:11.5": "Tissametteyyamāṇavapucchā dutiyā.",
  "cnd2:12.0": "3. Puṇṇakamāṇavapucchā",
  "cnd2:12.1": "“Anejaṃ mūladassāviṃ,\n(iccāyasmā puṇṇako)",
  "cnd2:12.2": "Atthi pañhena āgamaṃ;",
  "cnd2:12.3": "Kiṃ nissitā isayo manujā,",
  "cnd2:12.4": "Khattiyā brāhmaṇā devatānaṃ;",
  "cnd2:12.5": "Yaññamakappayiṃsu puthūdha loke,",
  "cnd2:12.6": "Pucchāmi taṃ bhagavā brūhi metaṃ”. (1)",
  "cnd2:13.1": "“Ye kecime isayo manujā,\n(puṇṇakāti bhagavā)",
  "cnd2:13.2": "Khattiyā brāhmaṇā devatānaṃ;",
  "cnd2:13.3": "Yaññamakappayiṃsu puthūdha loke,",
  "cnd2:13.4": "Āsīsamānā puṇṇaka itthattaṃ;",
  "cnd2:13.5": "Jaraṃ sitā yaññamakappayiṃsu”. (2)",
  "cnd2:14.1": "“Ye kecime isayo manujā,\n(iccāyasmā puṇṇako)",
  "cnd2:14.2": "Khattiyā brāhmaṇā devatānaṃ;",
  "cnd2:14.3": "Yaññamakappayiṃsu puthūdha loke,",
  "cnd2:14.4": "Kaccisu te bhagavā yaññapathe appamattā;",
  "cnd2:14.5": "Atāruṃ jātiñca jarañca mārisa,",
  "cnd2:14.6": "Pucchāmi taṃ bhagavā brūhi metaṃ”. (3)",
  "cnd2:15.1": "“Āsīsanti thomayanti abhijappanti juhanti,\n(puṇṇakāti bhagavā)",
  "cnd2:15.2": "Kāmābhijappanti paṭicca lābhaṃ;",
  "cnd2:15.3": "Te yājayogā bhavarāgarattā,",
  "cnd2:15.4": "Nātariṃsu jātijaranti brūmi”. (4)",
  "cnd2:16.1": "“Te ce nātariṃsu yājayogā,\n(iccāyasmā puṇṇako)",
  "cnd2:16.2": "Yaññehi jātiñca jarañca mārisa;",
  "cnd2:16.3": "Atha ko carahi devamanussaloke,",
  "cnd2:16.4": "Atāri jātiñca jarañca mārisa;",
  "cnd2:16.5": "Pucchāmi taṃ bhagavā brūhi metaṃ”. (5)",
  "cnd2:17.1": "“Saṅkhāya lokasmi paroparāni,\n(puṇṇakāti bhagavā)",
  "cnd2:17.2": "Yassiñjitaṃ natthi kuhiñci loke;",
  "cnd2:17.3": "Santo vidhūmo anīgho nirāso,",
  "cnd2:17.4": "Atāri so jātijaranti brūmī”ti. (6)",
  "cnd2:17.5": "Puṇṇakamāṇavapucchā tatiyā.",
  "cnd2:18.0": "4. Mettagūmāṇavapucchā",
  "cnd2:18.1": "“Pucchāmi taṃ bhagavā brūhi metaṃ,\n(iccāyasmā mettagū)",
  "cnd2:18.2": "Maññāmi taṃ vedaguṃ bhāvitattaṃ;",
  "cnd2:18.3": "Kuto nu dukkhā samudāgatā ime,",
  "cnd2:18.4": "Ye keci lokasmimanekarūpā”. (1)",
  "cnd2:19.1": "“Dukkhassa ve maṃ pabhavaṃ apucchasi,\n(mettagūti bhagavā)",
  "cnd2:19.2": "Taṃ te pavakkhāmi yathā pajānaṃ;",
  "cnd2:19.3": "Upadhinidānā pabhavanti dukkhā,",
  "cnd2:19.4": "Ye keci lokasmimanekarūpā. (2)",
  "cnd2:20.1": "Yo ve avidvā upadhiṃ karoti,",
  "cnd2:20.2": "Punappunaṃ dukkhamupeti mando;",
  "cnd2:20.3": "Tasmā pajānaṃ upadhiṃ na kayirā,",
  "cnd2:20.4": "Dukkhassa jātippabhavānupassī”. (3)",
  "cnd2:21.1": "“Yaṃ taṃ apucchimha akittayī no,",
  "cnd2:21.2": "Aññaṃ taṃ pucchāma tadiṅgha brūhi;",
  "cnd2:21.3": "‘Kathaṃ nu dhīrā vitaranti oghaṃ,",
  "cnd2:21.4": "Jātiṃ jaraṃ sokapariddavañca’;",
  "cnd2:21.5": "Taṃ me muni sādhu viyākarohi,",
  "cnd2:21.6": "Tathā hi te vidito esa dhammo”. (4)",
  "cnd2:22.1": "“Kittayissāmi te dhammaṃ,\n(mettagūti bhagavā)",
  "cnd2:22.2": "Diṭṭhe dhamme anītihaṃ;",
  "cnd2:22.3": "Yaṃ viditvā sato caraṃ,",
  "cnd2:22.4": "Tare loke visattikaṃ”. (5)",
  "cnd2:23.1": "“Tañcāhaṃ abhinandāmi,",
  "cnd2:23.2": "mahesi dhammamuttamaṃ;",
  "cnd2:23.3": "Yaṃ viditvā sato caraṃ,",
  "cnd2:23.4": "tare loke visattikaṃ”. (6)",
  "cnd2:24.1": "“Yaṃ kiñci sampajānāsi,\n(mettagūti bhagavā)",
  "cnd2:24.2": "Uddhaṃ adho tiriyañcāpi majjhe;",
  "cnd2:24.3": "Etesu nandiñca nivesanañca,",
  "cnd2:24.4": "Panujja viññāṇaṃ bhave na tiṭṭhe. (7)",
  "cnd2:25.1": "Evaṃvihārī sato appamatto,",
  "cnd2:25.2": "Bhikkhu caraṃ hitvā mamāyitāni;",
  "cnd2:25.3": "Jātiṃ jaraṃ sokapariddavañca,",
  "cnd2:25.4": "Idheva vidvā pajaheyya dukkhaṃ”. (8)",
  "cnd2:26.1": "“Etābhinandāmi vaco mahesino,",
  "cnd2:26.2": "Sukittitaṃ gotamanūpadhīkaṃ;",
  "cnd2:26.3": "Addhā hi bhagavā pahāsi dukkhaṃ,",
  "cnd2:26.4": "Tathā hi te vidito esa dhammo. (9)",
  "cnd2:27.1": "Te cāpi nūnappajaheyyu dukkhaṃ,",
  "cnd2:27.2": "Ye tvaṃ muni aṭṭhitaṃ ovadeyya;",
  "cnd2:27.3": "Taṃ taṃ namassāmi samecca nāga,",
  "cnd2:27.4": "Appeva maṃ bhagavā aṭṭhitaṃ ovadeyya”. (10)",
  "cnd2:28.1": "“Yaṃ brāhmaṇaṃ vedagumābhijaññā,",
  "cnd2:28.2": "Akiñcanaṃ kāmabhave asattaṃ;",
  "cnd2:28.3": "Addhā hi so oghamimaṃ atāri,",
  "cnd2:28.4": "Tiṇṇo ca pāraṃ akhilo akaṅkho. (11)",
  "cnd2:29.1": "Vidvā ca yo vedagū naro idha,",
  "cnd2:29.2": "Bhavābhave saṅgamimaṃ visajja;",
  "cnd2:29.3": "So vītataṇho anīgho nirāso,",
  "cnd2:29.4": "Atāri so jātijaranti brūmī”ti. (12)",
  "cnd2:29.5": "Mettagūmāṇavapucchā catutthī.",
  "cnd2:30.0": "5. Dhotakamāṇavapucchā",
  "cnd2:30.1": "“Pucchāmi taṃ bhagavā brūhi metaṃ,\n(iccāyasmā dhotako)",
  "cnd2:30.2": "Vācābhikaṅkhāmi mahesi tuyhaṃ;",
  "cnd2:30.3": "Tava sutvāna nigghosaṃ,",
  "cnd2:30.4": "Sikkhe nibbānamattano”. (1)",
  "cnd2:31.1": "“Tenahātappaṃ karohi,\n(dhotakāti bhagavā)",
  "cnd2:31.2": "Idheva nipako sato;",
  "cnd2:31.3": "Ito sutvāna nigghosaṃ,",
  "cnd2:31.4": "Sikkhe nibbānamattano”. (2)",
  "cnd2:32.1": "“Passāmahaṃ devamanussaloke,",
  "cnd2:32.2": "Akiñcanaṃ brāhmaṇamiriyamānaṃ;",
  "cnd2:32.3": "Taṃ taṃ namassāmi samantacakkhu,",
  "cnd2:32.4": "Pamuñca maṃ sakka kathaṃkathāhi”. (3)",
  "cnd2:33.1": "“Nāhaṃ sahissāmi pamocanāya,",
  "cnd2:33.2": "Kathaṃkathiṃ dhotaka kañci loke;",
  "cnd2:33.3": "Dhammañca seṭṭhaṃ abhijānamāno,",
  "cnd2:33.4": "Evaṃ tuvaṃ oghamimaṃ taresi”. (4)",
  "cnd2:34.1": "“Anusāsa brahme karuṇāyamāno,",
  "cnd2:34.2": "Vivekadhammaṃ yamahaṃ vijaññaṃ;",
  "cnd2:34.3": "Yathāhaṃ ākāsova abyāpajjamāno,",
  "cnd2:34.4": "Idheva santo asito careyyaṃ”. (5)",
  "cnd2:35.1": "“Kittayissāmi te santiṃ,\n(dhotakāti bhagavā)",
  "cnd2:35.2": "Diṭṭhe dhamme anītihaṃ;",
  "cnd2:35.3": "Yaṃ viditvā sato caraṃ,",
  "cnd2:35.4": "Tare loke visattikaṃ”. (6)",
  "cnd2:36.1": "“Tañcāhaṃ abhinandāmi,",
  "cnd2:36.2": "mahesi santimuttamaṃ;",
  "cnd2:36.3": "Yaṃ viditvā sato caraṃ,",
  "cnd2:36.4": "tare loke visattikaṃ”. (7)",
  "cnd2:37.1": "“Yaṃ kiñci sampajānāsi,\n(dhotakāti bhagavā)",
  "cnd2:37.2": "Uddhaṃ adho tiriyañcāpi majjhe;",
  "cnd2:37.3": "Etaṃ viditvā saṅgoti loke,",
  "cnd2:37.4": "Bhavābhavāya mākāsi taṇhan”ti. (8)",
  "cnd2:37.5": "Dhotakamāṇavapucchā pañcamī.",
  "cnd2:38.0": "6. Upasīvamāṇavapucchā",
  "cnd2:38.1": "“Eko ahaṃ sakka mahantamoghaṃ,\n(iccāyasmā upasīvo)",
  "cnd2:38.2": "Anissito no visahāmi tārituṃ;",
  "cnd2:38.3": "Ārammaṇaṃ brūhi samantacakkhu,",
  "cnd2:38.4": "Yaṃ nissito oghamimaṃ tareyyaṃ”. (1)",
  "cnd2:39.1": "“Ākiñcaññaṃ pekkhamāno satimā,\n(upasīvāti bhagavā)",
  "cnd2:39.2": "Natthīti nissāya tarassu oghaṃ;",
  "cnd2:39.3": "Kāme pahāya virato kathāhi,",
  "cnd2:39.4": "Taṇhakkhayaṃ nattamahābhipassa”. (2)",
  "cnd2:40.1": "“Sabbesu kāmesu yo vītarāgo,\n(iccāyasmā upasīvo)",
  "cnd2:40.2": "Ākiñcaññaṃ nissito hitvā maññaṃ;",
  "cnd2:40.3": "Saññāvimokkhe paramedhimutto,",
  "cnd2:40.4": "Tiṭṭhe nu so tattha anānuyāyī”. (3)",
  "cnd2:41.1": "“Sabbesu kāmesu yo vītarāgo,\n(upasīvāti bhagavā)",
  "cnd2:41.2": "Ākiñcaññaṃ nissito hitvā maññaṃ;",
  "cnd2:41.3": "Saññāvimokkhe paramedhimutto,",
  "cnd2:41.4": "Tiṭṭheyya so tattha anānuyāyī”. (4)",
  "cnd2:42.1": "“Tiṭṭhe ce so tattha anānuyāyī,",
  "cnd2:42.2": "Pūgampi vassānaṃ samantacakkhu;",
  "cnd2:42.3": "Tattheva so sītisiyā vimutto,",
  "cnd2:42.4": "Cavetha viññāṇaṃ tathāvidhassa”. (5)",
  "cnd2:43.1": "“Acci yathā vātavegena khittā,\n(upasīvāti bhagavā)",
  "cnd2:43.2": "Atthaṃ paleti na upeti saṅkhaṃ;",
  "cnd2:43.3": "Evaṃ munī nāmakāyā vimutto,",
  "cnd2:43.4": "Atthaṃ paleti na upeti saṅkhaṃ”. (6)",
  "cnd2:44.1": "“Atthaṅgato so uda vā so natthi,",
  "cnd2:44.2": "Udāhu ve sassatiyā arogo;",
  "cnd2:44.3": "Taṃ me munī sādhu viyākarohi,",
  "cnd2:44.4": "Tathā hi te vidito esa dhammo”. (7)",
  "cnd2:45.1": "“Atthaṅgatassa na pamāṇamatthi,\n(upasīvāti bhagavā)",
  "cnd2:45.2": "Yena naṃ vajjuṃ taṃ tassa natthi;",
  "cnd2:45.3": "Sabbesu dhammesu samūhatesu,",
  "cnd2:45.4": "Samūhatā vādapathāpi sabbe”ti. (8)",
  "cnd2:45.5": "Upasīvamāṇavapucchā chaṭṭhī.",
  "cnd2:46.0": "7. Nandamāṇavapucchā",
  "cnd2:46.1": "“Santi loke munayo,\n(iccāyasmā nando)",
  "cnd2:46.2": "Janā vadanti tayidaṃ kathaṃsu;",
  "cnd2:46.3": "Ñāṇūpapannaṃ muni no vadanti,",
  "cnd2:46.4": "Udāhu ve jīvitenūpapannaṃ”. (1)",
  "cnd2:47.1": "“Na diṭṭhiyā na sutiyā na ñāṇena,",
  "cnd2:47.2": "Munīdha nanda kusalā vadanti;",
  "cnd2:47.3": "Visenikatvā anīghā nirāsā,",
  "cnd2:47.4": "Caranti ye te munayoti brūmi”. (2)",
  "cnd2:48.1": "“Ye kecime samaṇabrāhmaṇāse,\n(iccāyasmā nando)",
  "cnd2:48.2": "Diṭṭhassutenāpi vadanti suddhiṃ;",
  "cnd2:48.3": "Sīlabbatenāpi vadanti suddhiṃ,",
  "cnd2:48.4": "Anekarūpena vadanti suddhiṃ;",
  "cnd2:48.5": "Kaccissu te bhagavā tattha yatā carantā,",
  "cnd2:48.6": "Atāru jātiñca jarañca mārisa;",
  "cnd2:48.7": "Pucchāmi taṃ bhagavā brūhi metaṃ”. (3)",
  "cnd2:49.1": "“Ye kecime samaṇabrāhmaṇāse,\n(nandāti bhagavā)",
  "cnd2:49.2": "Diṭṭhassutenāpi vadanti suddhiṃ;",
  "cnd2:49.3": "Sīlabbatenāpi vadanti suddhiṃ,",
  "cnd2:49.4": "Anekarūpena vadanti suddhiṃ;",
  "cnd2:49.5": "Kiñcāpi te tattha yatā caranti,",
  "cnd2:49.6": "Nātariṃsu jātijaranti brūmi”. (4)",
  "cnd2:50.1": "“Ye kecime samaṇabrāhmaṇāse,\n(iccāyasmā nando)",
  "cnd2:50.2": "Diṭṭhassutenāpi vadanti suddhiṃ;",
  "cnd2:50.3": "Sīlabbatenāpi vadanti suddhiṃ,",
  "cnd2:50.4": "Anekarūpena vadanti suddhiṃ;",
  "cnd2:50.5": "Te ce muni brūsi anoghatiṇṇe,",
  "cnd2:50.6": "Atha ko carahi devamanussaloke;",
  "cnd2:50.7": "Atāri jātiñca jarañca mārisa,",
  "cnd2:50.8": "Pucchāmi taṃ bhagavā brūhi metaṃ”. (5)",
  "cnd2:51.1": "“Nāhaṃ sabbe samaṇabrāhmaṇāse,\n(nandāti bhagavā)",
  "cnd2:51.2": "Jātijarāya nivutāti brūmi;",
  "cnd2:51.3": "Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā,",
  "cnd2:51.4": "Sīlabbataṃ vāpi pahāya sabbaṃ;",
  "cnd2:51.5": "Anekarūpampi pahāya sabbaṃ,",
  "cnd2:51.6": "Taṇhaṃ pariññāya anāsavāse;",
  "cnd2:51.7": "Te ve narā oghatiṇṇāti brūmi”. (6)",
  "cnd2:52.1": "“Etābhinandāmi vaco mahesino,",
  "cnd2:52.2": "Sukittitaṃ gotamanūpadhīkaṃ;",
  "cnd2:52.3": "Ye sīdha diṭṭhaṃ va sutaṃ mutaṃ vā,",
  "cnd2:52.4": "Sīlabbataṃ vāpi pahāya sabbaṃ;",
  "cnd2:52.5": "Anekarūpampi pahāya sabbaṃ,",
  "cnd2:52.6": "Taṇhaṃ pariññāya anāsavāse;",
  "cnd2:52.7": "Ahampi te oghatiṇṇāti brūmī”ti. (7)",
  "cnd2:52.8": "Nandamāṇavapucchā sattamā.",
  "cnd2:53.0": "8. Hemakamāṇavapucchā",
  "cnd2:53.1": "“Ye me pubbe viyākaṃsu,\n(iccāyasmā hemako)",
  "cnd2:53.2": "Huraṃ gotamasāsanā;",
  "cnd2:53.3": "Iccāsi iti bhavissati,",
  "cnd2:53.4": "Sabbaṃ taṃ itihītihaṃ;",
  "cnd2:53.5": "Sabbaṃ taṃ takkavaḍḍhanaṃ,",
  "cnd2:53.6": "Nāhaṃ tattha abhiramiṃ. (1)",
  "cnd2:54.1": "Tvañca me dhammamakkhāhi,",
  "cnd2:54.2": "taṇhānigghātanaṃ muni;",
  "cnd2:54.3": "Yaṃ viditvā sato caraṃ,",
  "cnd2:54.4": "tare loke visattikaṃ”. (2)",
  "cnd2:55.1": "“Idha diṭṭhasutamutaviññātesu,",
  "cnd2:55.2": "Piyarūpesu hemaka;",
  "cnd2:55.3": "Chandarāgavinodanaṃ,",
  "cnd2:55.4": "Nibbānapadamaccutaṃ. (3)",
  "cnd2:56.1": "Etadaññāya ye satā,",
  "cnd2:56.2": "Diṭṭhadhammābhinibbutā;",
  "cnd2:56.3": "Upasantā ca te sadā,",
  "cnd2:56.4": "Tiṇṇā loke visattikan”ti. (4)",
  "cnd2:56.5": "Hemakamāṇavapucchā aṭṭhamā.",
  "cnd2:57.0": "9. Todeyyamāṇavapucchā",
  "cnd2:57.1": "“Yasmiṃ kāmā na vasanti,\n(iccāyasmā todeyyo)",
  "cnd2:57.2": "Taṇhā yassa na vijjati;",
  "cnd2:57.3": "Kathaṃkathā ca yo tiṇṇo,",
  "cnd2:57.4": "Vimokkho tassa kīdiso”. (1)",
  "cnd2:58.1": "“Yasmiṃ kāmā na vasanti,\n(todeyyāti bhagavā)",
  "cnd2:58.2": "Taṇhā yassa na vijjati;",
  "cnd2:58.3": "Kathaṃkathā ca yo tiṇṇo,",
  "cnd2:58.4": "Vimokkho tassa nāparo”. (2)",
  "cnd2:59.1": "“Nirāsaso so uda āsasāno,",
  "cnd2:59.2": "Paññāṇavā so uda paññakappī;",
  "cnd2:59.3": "Muniṃ ahaṃ sakka yathā vijaññaṃ,",
  "cnd2:59.4": "Taṃ me viyācikkha samantacakkhu”. (3)",
  "cnd2:60.1": "“Nirāsaso so na ca āsasāno,",
  "cnd2:60.2": "Paññāṇavā so na ca paññakappī;",
  "cnd2:60.3": "Evampi todeyya muniṃ vijāna,",
  "cnd2:60.4": "Akiñcanaṃ kāmabhave asattan”ti. (4)",
  "cnd2:60.5": "Todeyyamāṇavapucchā navamā.",
  "cnd2:61.0": "10. Kappamāṇavapucchā",
  "cnd2:61.1": "“Majjhe sarasmiṃ tiṭṭhataṃ,\n(iccāyasmā kappo)",
  "cnd2:61.2": "Oghe jāte mahabbhaye;",
  "cnd2:61.3": "Jarāmaccuparetānaṃ,",
  "cnd2:61.4": "Dīpaṃ pabrūhi mārisa;",
  "cnd2:61.5": "Tvañca me dīpamakkhāhi,",
  "cnd2:61.6": "Yathāyidaṃ nāparaṃ siyā”. (1)",
  "cnd2:62.1": "“Majjhe sarasmiṃ tiṭṭhataṃ,\n(kappāti bhagavā)",
  "cnd2:62.2": "Oghe jāte mahabbhaye;",
  "cnd2:62.3": "Jarāmaccuparetānaṃ,",
  "cnd2:62.4": "Dīpaṃ pabrūmi kappa te. (2)",
  "cnd2:63.1": "Akiñcanaṃ anādānaṃ,",
  "cnd2:63.2": "etaṃ dīpaṃ anāparaṃ;",
  "cnd2:63.3": "Nibbānaṃ iti naṃ brūmi,",
  "cnd2:63.4": "jarāmaccuparikkhayaṃ. (3)",
  "cnd2:64.1": "Etadaññāya ye satā,",
  "cnd2:64.2": "Diṭṭhadhammābhinibbutā;",
  "cnd2:64.3": "Na te māravasānugā,",
  "cnd2:64.4": "Na te mārassa paddhagū”ti. (4)",
  "cnd2:64.5": "Kappamāṇavapucchā dasamā.",
  "cnd2:65.0": "11. Jatukaṇṇimāṇavapucchā",
  "cnd2:65.1": "“Sutvānahaṃ vīramakāmakāmiṃ,\n(iccāyasmā jatukaṇṇi)",
  "cnd2:65.2": "Oghātigaṃ puṭṭhumakāmamāgamaṃ;",
  "cnd2:65.3": "Santipadaṃ brūhi sahajanetta,",
  "cnd2:65.4": "Yathātacchaṃ bhagavā brūhi metaṃ. (1)",
  "cnd2:66.1": "Bhagavā hi kāme abhibhuyya iriyati,",
  "cnd2:66.2": "Ādiccova pathaviṃ tejī tejasā;",
  "cnd2:66.3": "Parittapaññassa me bhūripañña,",
  "cnd2:66.4": "Ācikkha dhammaṃ yamahaṃ vijaññaṃ;",
  "cnd2:66.5": "Jātijarāya idha vippahānaṃ”. (2)",
  "cnd2:67.1": "“Kāmesu vinaya gedhaṃ,\n(jatukaṇṇīti bhagavā)",
  "cnd2:67.2": "Nekkhammaṃ daṭṭhu khemato;",
  "cnd2:67.3": "Uggahitaṃ nirattaṃ vā,",
  "cnd2:67.4": "Mā te vijjittha kiñcanaṃ. (3)",
  "cnd2:68.1": "Yaṃ pubbe taṃ visosehi,",
  "cnd2:68.2": "pacchā te māhu kiñcanaṃ;",
  "cnd2:68.3": "Majjhe ce no gahessasi,",
  "cnd2:68.4": "upasanto carissasi. (4)",
  "cnd2:69.1": "Sabbaso nāmarūpasmiṃ,",
  "cnd2:69.2": "Vītagedhassa brāhmaṇa;",
  "cnd2:69.3": "Āsavāssa na vijjanti,",
  "cnd2:69.4": "Yehi maccuvasaṃ vaje”ti. (5)",
  "cnd2:69.5": "Jatukaṇṇimāṇavapucchā ekādasamā.",
  "cnd2:70.0": "12. Bhadrāvudhamāṇavapucchā",
  "cnd2:70.1": "“Okañjahaṃ taṇhacchidaṃ anejaṃ,\n(iccāyasmā bhadrāvudho)",
  "cnd2:70.2": "Nandiñjahaṃ oghatiṇṇaṃ vimuttaṃ;",
  "cnd2:70.3": "Kappañjahaṃ abhiyāce sumedhaṃ,",
  "cnd2:70.4": "Sutvāna nāgassa apanamissanti ito. (1)",
  "cnd2:71.1": "Nānājanā janapadehi saṅgatā,",
  "cnd2:71.2": "Tava vīra vākyaṃ abhikaṅkhamānā;",
  "cnd2:71.3": "Tesaṃ tuvaṃ sādhu viyākarohi,",
  "cnd2:71.4": "Tathā hi te vidito esa dhammo”. (2)",
  "cnd2:72.1": "“Ādānataṇhaṃ vinayetha sabbaṃ,\n(bhadrāvudhāti bhagavā)",
  "cnd2:72.2": "Uddhaṃ adho tiriyañcāpi majjhe;",
  "cnd2:72.3": "Yaṃ yañhi lokasmimupādiyanti,",
  "cnd2:72.4": "Teneva māro anveti jantuṃ. (3)",
  "cnd2:73.1": "Tasmā pajānaṃ na upādiyetha,",
  "cnd2:73.2": "Bhikkhu sato kiñcanaṃ sabbaloke;",
  "cnd2:73.3": "Ādānasatte iti pekkhamāno,",
  "cnd2:73.4": "Pajaṃ imaṃ maccudheyye visattan”ti. (4)",
  "cnd2:73.5": "Bhadrāvudhamāṇavapucchā dvādasamā.",
  "cnd2:74.0": "13. Udayamāṇavapucchā",
  "cnd2:74.1": "“Jhāyiṃ virajamāsīnaṃ,\n(iccāyasmā udayo)",
  "cnd2:74.2": "Katakiccaṃ anāsavaṃ;",
  "cnd2:74.3": "Pāraguṃ sabbadhammānaṃ,",
  "cnd2:74.4": "Atthi pañhena āgamaṃ;",
  "cnd2:74.5": "Aññāvimokkhaṃ pabrūhi,",
  "cnd2:74.6": "Avijjāya pabhedanaṃ”. (1)",
  "cnd2:75.1": "“Pahānaṃ kāmacchandānaṃ,\n(udayāti bhagavā)",
  "cnd2:75.2": "Domanassāna cūbhayaṃ;",
  "cnd2:75.3": "Thinassa ca panūdanaṃ,",
  "cnd2:75.4": "Kukkuccānaṃ nivāraṇaṃ. (2)",
  "cnd2:76.1": "Upekkhāsatisaṃsuddhaṃ,",
  "cnd2:76.2": "dhammatakkapurejavaṃ;",
  "cnd2:76.3": "Aññāvimokkhaṃ pabrūmi,",
  "cnd2:76.4": "avijjāya pabhedanaṃ”. (3)",
  "cnd2:77.1": "“Kiṃsu saṃyojano loko,",
  "cnd2:77.2": "kiṃsu tassa vicāraṇaṃ;",
  "cnd2:77.3": "Kissassa vippahānena,",
  "cnd2:77.4": "nibbānaṃ iti vuccati”. (4)",
  "cnd2:78.1": "“Nandisaṃyojano loko,",
  "cnd2:78.2": "vitakkassa vicāraṇaṃ;",
  "cnd2:78.3": "Taṇhāya vippahānena,",
  "cnd2:78.4": "nibbānaṃ iti vuccati”. (5)",
  "cnd2:79.1": "“Kathaṃ satassa carato,",
  "cnd2:79.2": "viññāṇaṃ uparujjhati;",
  "cnd2:79.3": "Bhagavantaṃ puṭṭhumāgamma,",
  "cnd2:79.4": "taṃ suṇoma vaco tava”. (6)",
  "cnd2:80.1": "“Ajjhattañca bahiddhā ca,",
  "cnd2:80.2": "Vedanaṃ nābhinandato;",
  "cnd2:80.3": "Evaṃ satassa carato,",
  "cnd2:80.4": "Viññāṇaṃ uparujjhatī”ti. (7)",
  "cnd2:80.5": "Udayamāṇavapucchā terasamā.",
  "cnd2:81.0": "14. Posālamāṇavapucchā",
  "cnd2:81.1": "“Yo atītaṃ ādisati,\n(iccāyasmā posālo)",
  "cnd2:81.2": "Anejo chinnasaṃsayo;",
  "cnd2:81.3": "Pāraguṃ sabbadhammānaṃ,",
  "cnd2:81.4": "Atthi pañhena āgamaṃ. (1)",
  "cnd2:82.1": "Vibhūtarūpasaññissa,",
  "cnd2:82.2": "sabbakāyappahāyino;",
  "cnd2:82.3": "Ajjhattañca bahiddhā ca,",
  "cnd2:82.4": "natthi kiñcīti passato;",
  "cnd2:82.5": "Ñāṇaṃ sakkānupucchāmi,",
  "cnd2:82.6": "kathaṃ neyyo tathāvidho”. (2)",
  "cnd2:83.1": "“Viññāṇaṭṭhitiyo sabbā,\n(posālāti bhagavā)",
  "cnd2:83.2": "Abhijānaṃ tathāgato;",
  "cnd2:83.3": "Tiṭṭhantamenaṃ jānāti,",
  "cnd2:83.4": "Vimuttaṃ tapparāyaṇaṃ. (3)",
  "cnd2:84.1": "Ākiñcaññasambhavaṃ ñatvā,",
  "cnd2:84.2": "Nandī saṃyojanaṃ iti;",
  "cnd2:84.3": "Evametaṃ abhiññāya,",
  "cnd2:84.4": "Tato tattha vipassati;",
  "cnd2:84.5": "Etaṃ ñāṇaṃ tathaṃ tassa,",
  "cnd2:84.6": "Brāhmaṇassa vusīmato”ti. (4)",
  "cnd2:84.7": "Posālamāṇavapucchā cuddasamā.",
  "cnd2:85.0": "15. Mogharājamāṇavapucchā",
  "cnd2:85.1": "“Dvāhaṃ sakkaṃ apucchissaṃ,\n(iccāyasmā mogharājā)",
  "cnd2:85.2": "Na me byākāsi cakkhumā;",
  "cnd2:85.3": "Yāvatatiyañca devīsi,",
  "cnd2:85.4": "Byākarotīti me sutaṃ. (1)",
  "cnd2:86.1": "Ayaṃ loko paro loko,",
  "cnd2:86.2": "brahmaloko sadevako;",
  "cnd2:86.3": "Diṭṭhiṃ te nābhijānāti,",
  "cnd2:86.4": "gotamassa yasassino. (2)",
  "cnd2:87.1": "Evaṃ abhikkantadassāviṃ,",
  "cnd2:87.2": "atthi pañhena āgamaṃ;",
  "cnd2:87.3": "Kathaṃ lokaṃ avekkhantaṃ,",
  "cnd2:87.4": "maccurājā na passati”. (3)",
  "cnd2:88.1": "“Suññato lokaṃ avekkhassu,",
  "cnd2:88.2": "Mogharāja sadā sato;",
  "cnd2:88.3": "Attānudiṭṭhiṃ ūhacca,",
  "cnd2:88.4": "Evaṃ maccutaro siyā;",
  "cnd2:88.5": "Evaṃ lokaṃ avekkhantaṃ,",
  "cnd2:88.6": "Maccurājā na passatī”ti. (4)",
  "cnd2:88.7": "Mogharājamāṇavapucchā pannarasamā.",
  "cnd2:89.0": "16. Piṅgiyamāṇavapucchā",
  "cnd2:89.1": "“Jiṇṇohamasmi abalo vītavaṇṇo,\n(iccāyasmā piṅgiyo)",
  "cnd2:89.2": "Nettā na suddhā savanaṃ na phāsu;",
  "cnd2:89.3": "Māhaṃ nassaṃ momuho antarāva,",
  "cnd2:89.4": "Ācikkha dhammaṃ yamahaṃ vijaññaṃ;",
  "cnd2:89.5": "Jātijarāya idha vippahānaṃ”. (1)",
  "cnd2:90.1": "“Disvāna rūpesu vihaññamāne,\n(piṅgiyāti bhagavā)",
  "cnd2:90.2": "Ruppanti rūpesu janā pamattā;",
  "cnd2:90.3": "Tasmā tuvaṃ piṅgiya appamatto,",
  "cnd2:90.4": "Jahassu rūpaṃ apunabbhavāya”. (2)",
  "cnd2:91.1": "“Disā catasso vidisā catasso,",
  "cnd2:91.2": "Uddhaṃ adho dasa disā imāyo;",
  "cnd2:91.3": "Na tuyhaṃ adiṭṭhaṃ asutaṃ amutaṃ,",
  "cnd2:91.4": "Atho aviññātaṃ kiñcanamatthi loke;",
  "cnd2:91.5": "Ācikkha dhammaṃ yamahaṃ vijaññaṃ,",
  "cnd2:91.6": "Jātijarāya idha vippahānaṃ”. (3)",
  "cnd2:92.1": "“Taṇhādhipanne manuje pekkhamāno,\n(piṅgiyāti bhagavā)",
  "cnd2:92.2": "Santāpajāte jarasā parete;",
  "cnd2:92.3": "Tasmā tuvaṃ piṅgiya appamatto,",
  "cnd2:92.4": "Jahassu taṇhaṃ apunabbhavāyā”ti. (4)",
  "cnd2:92.5": "Piṅgiyamāṇavapucchā soḷasamā."
}