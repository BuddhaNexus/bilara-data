{
  "thag17.2:0.1": "Theragāthā",
  "thag17.2:0.2": "Tiṃsanipāta",
  "thag17.2:0.3": "Paṭhamavagga",
  "thag17.2:0.4": "17.2. Sāriputtattheragāthā",
  "thag17.2:1.1": "“Yathācārī yathāsato satīmā,",
  "thag17.2:1.2": "Yatasaṅkappajjhāyi appamatto;",
  "thag17.2:1.3": "Ajjhattarato samāhitatto,",
  "thag17.2:1.4": "Eko santusito tamāhu bhikkhuṃ.",
  "thag17.2:1.5": "Allaṃ sukkhaṃ vā bhuñjanto,",
  "thag17.2:1.6": "Na bāḷhaṃ suhito siyā;",
  "thag17.2:1.7": "Ūnūdaro mitāhāro,",
  "thag17.2:1.8": "Sato bhikkhu paribbaje.",
  "thag17.2:1.9": "Cattāro pañca ālope,",
  "thag17.2:1.10": "abhutvā udakaṃ pive;",
  "thag17.2:1.11": "Alaṃ phāsuvihārāya,",
  "thag17.2:1.12": "pahitattassa bhikkhuno.",
  "thag17.2:1.13": "Kappiyaṃ tañce chādeti,",
  "thag17.2:1.14": "cīvaraṃ idamatthikaṃ;",
  "thag17.2:1.15": "Alaṃ phāsuvihārāya,",
  "thag17.2:1.16": "pahitattassa bhikkhuno.",
  "thag17.2:1.17": "Pallaṅkena nisinnassa,",
  "thag17.2:1.18": "jaṇṇuke nābhivassati;",
  "thag17.2:1.19": "Alaṃ phāsuvihārāya,",
  "thag17.2:1.20": "pahitattassa bhikkhuno.",
  "thag17.2:1.21": "Yo sukhaṃ dukkhato adda,",
  "thag17.2:1.22": "dukkhamaddakkhi sallato;",
  "thag17.2:1.23": "Ubhayantarena nāhosi,",
  "thag17.2:1.24": "kena lokasmi kiṃ siyā.",
  "thag17.2:1.25": "Mā me kadāci pāpiccho,",
  "thag17.2:1.26": "kusīto hīnavīriyo;",
  "thag17.2:1.27": "Appassuto anādaro,",
  "thag17.2:1.28": "kena lokasmi kiṃ siyā.",
  "thag17.2:1.29": "Bahussuto ca medhāvī,",
  "thag17.2:1.30": "sīlesu susamāhito;",
  "thag17.2:1.31": "Cetosamathamanuyutto,",
  "thag17.2:1.32": "api muddhani tiṭṭhatu.",
  "thag17.2:1.33": "Yo papañcamanuyutto,",
  "thag17.2:1.34": "papañcābhirato mago;",
  "thag17.2:1.35": "Virādhayī so nibbānaṃ,",
  "thag17.2:1.36": "yogakkhemaṃ anuttaraṃ.",
  "thag17.2:1.37": "Yo ca papañcaṃ hitvāna,",
  "thag17.2:1.38": "nippapañcapathe rato;",
  "thag17.2:1.39": "Ārādhayī so nibbānaṃ,",
  "thag17.2:1.40": "yogakkhemaṃ anuttaraṃ.",
  "thag17.2:1.41": "Gāme vā yadi vāraññe,",
  "thag17.2:1.42": "Ninne vā yadi vā thale;",
  "thag17.2:1.43": "Yattha arahanto viharanti,",
  "thag17.2:1.44": "Taṃ bhūmirāmaṇeyyakaṃ.",
  "thag17.2:1.45": "Ramaṇīyāni araññāni,",
  "thag17.2:1.46": "yattha na ramatī jano;",
  "thag17.2:1.47": "Vītarāgā ramissanti,",
  "thag17.2:1.48": "na te kāmagavesino.",
  "thag17.2:1.49": "Nidhīnaṃva pavattāraṃ,",
  "thag17.2:1.50": "yaṃ passe vajjadassinaṃ;",
  "thag17.2:1.51": "Niggayhavādiṃ medhāviṃ,",
  "thag17.2:1.52": "tādisaṃ paṇḍitaṃ bhaje;",
  "thag17.2:1.53": "Tādisaṃ bhajamānassa,",
  "thag17.2:1.54": "seyyo hoti na pāpiyo.",
  "thag17.2:1.55": "Ovadeyyānusāseyya,",
  "thag17.2:1.56": "asabbhā ca nivāraye;",
  "thag17.2:1.57": "Satañhi so piyo hoti,",
  "thag17.2:1.58": "asataṃ hoti appiyo.",
  "thag17.2:1.59": "Aññassa bhagavā buddho,",
  "thag17.2:1.60": "dhammaṃ desesi cakkhumā;",
  "thag17.2:1.61": "Dhamme desiyamānamhi,",
  "thag17.2:1.62": "sotamodhesimatthiko.",
  "thag17.2:1.63": "Taṃ me amoghaṃ savanaṃ,",
  "thag17.2:1.64": "vimuttomhi anāsavo.",
  "thag17.2:1.65": "Neva pubbenivāsāya,",
  "thag17.2:1.66": "napi dibbassa cakkhuno;",
  "thag17.2:1.67": "Cetopariyāya iddhiyā,",
  "thag17.2:1.68": "cutiyā upapattiyā;",
  "thag17.2:1.69": "Sotadhātuvisuddhiyā,",
  "thag17.2:1.70": "paṇidhī me na vijjati”.",
  "thag17.2:1.71": "“Rukkhamūlaṃva nissāya,",
  "thag17.2:1.72": "muṇḍo saṅghāṭipāruto;",
  "thag17.2:1.73": "Paññāya uttamo thero,",
  "thag17.2:1.74": "upatissova jhāyati.",
  "thag17.2:1.75": "Avitakkaṃ samāpanno,",
  "thag17.2:1.76": "sammāsambuddhasāvako;",
  "thag17.2:1.77": "Ariyena tuṇhībhāvena,",
  "thag17.2:1.78": "upeto hoti tāvade.",
  "thag17.2:1.79": "Yathāpi pabbato selo,",
  "thag17.2:1.80": "acalo suppatiṭṭhito;",
  "thag17.2:1.81": "Evaṃ mohakkhayā bhikkhu,",
  "thag17.2:1.82": "pabbatova na vedhati”.",
  "thag17.2:1.83": "“Anaṅgaṇassa posassa,",
  "thag17.2:1.84": "niccaṃ sucigavesino;",
  "thag17.2:1.85": "Vālaggamattaṃ pāpassa,",
  "thag17.2:1.86": "abbhamattaṃva khāyati.",
  "thag17.2:1.87": "Nābhinandāmi maraṇaṃ,",
  "thag17.2:1.88": "nābhinandāmi jīvitaṃ;",
  "thag17.2:1.89": "Nikkhipissaṃ imaṃ kāyaṃ,",
  "thag17.2:1.90": "sampajāno patissato.",
  "thag17.2:1.91": "Nābhinandāmi maraṇaṃ,",
  "thag17.2:1.92": "nābhinandāmi jīvitaṃ;",
  "thag17.2:1.93": "Kālañca paṭikaṅkhāmi,",
  "thag17.2:1.94": "nibbisaṃ bhatako yathā”.",
  "thag17.2:1.95": "“Ubhayena midaṃ maraṇameva,",
  "thag17.2:1.96": "Nāmaraṇaṃ pacchā vā pure vā;",
  "thag17.2:1.97": "Paṭipajjatha mā vinassatha,",
  "thag17.2:1.98": "Khaṇo vo mā upaccagā.",
  "thag17.2:1.99": "Nagaraṃ yathā paccantaṃ,",
  "thag17.2:1.100": "guttaṃ santarabāhiraṃ;",
  "thag17.2:1.101": "Evaṃ gopetha attānaṃ,",
  "thag17.2:1.102": "khaṇo vo mā upaccagā;",
  "thag17.2:1.103": "Khaṇātītā hi socanti,",
  "thag17.2:1.104": "nirayamhi samappitā”.",
  "thag17.2:1.105": "“Upasanto uparato,",
  "thag17.2:1.106": "mantabhāṇī anuddhato;",
  "thag17.2:1.107": "Dhunāti pāpake dhamme,",
  "thag17.2:1.108": "dumapattaṃva māluto.",
  "thag17.2:1.109": "Upasanto uparato,",
  "thag17.2:1.110": "mantabhāṇī anuddhato;",
  "thag17.2:1.111": "Appāsi pāpake dhamme,",
  "thag17.2:1.112": "dumapattaṃva māluto.",
  "thag17.2:1.113": "Upasanto anāyāso,",
  "thag17.2:1.114": "vippasanno anāvilo;",
  "thag17.2:1.115": "Kalyāṇasīlo medhāvī,",
  "thag17.2:1.116": "dukkhassantakaro siyā”.",
  "thag17.2:1.117": "“Na vissase ekatiyesu evaṃ,",
  "thag17.2:1.118": "Agārisu pabbajitesu cāpi;",
  "thag17.2:1.119": "Sādhūpi hutvā na asādhu honti,",
  "thag17.2:1.120": "Asādhu hutvā puna sādhu honti.",
  "thag17.2:1.121": "Kāmacchando ca byāpādo,",
  "thag17.2:1.122": "thinamiddhañca bhikkhuno;",
  "thag17.2:1.123": "Uddhaccaṃ vicikicchā ca,",
  "thag17.2:1.124": "pañcete cittakelisā.",
  "thag17.2:1.125": "Yassa sakkariyamānassa,",
  "thag17.2:1.126": "asakkārena cūbhayaṃ;",
  "thag17.2:1.127": "Samādhi na vikampati,",
  "thag17.2:1.128": "appamādavihārino.",
  "thag17.2:1.129": "Taṃ jhāyinaṃ sātatikaṃ,",
  "thag17.2:1.130": "sukhumadiṭṭhivipassakaṃ;",
  "thag17.2:1.131": "Upādānakkhayārāmaṃ,",
  "thag17.2:1.132": "āhu sappuriso iti.",
  "thag17.2:1.133": "Mahāsamuddo pathavī,",
  "thag17.2:1.134": "pabbato anilopi ca;",
  "thag17.2:1.135": "Upamāya na yujjanti,",
  "thag17.2:1.136": "satthu varavimuttiyā.",
  "thag17.2:1.137": "Cakkānuvattako thero,",
  "thag17.2:1.138": "mahāñāṇī samāhito;",
  "thag17.2:1.139": "Pathavāpaggisamāno,",
  "thag17.2:1.140": "na rajjati na dussati.",
  "thag17.2:1.141": "Paññāpāramitaṃ patto,",
  "thag17.2:1.142": "mahābuddhi mahāmati;",
  "thag17.2:1.143": "Ajaḷo jaḷasamāno,",
  "thag17.2:1.144": "sadā carati nibbuto.",
  "thag17.2:1.145": "Pariciṇṇo mayā satthā,",
  "thag17.2:1.146": "…",
  "thag17.2:1.147": "pe …",
  "thag17.2:1.148": "bhavanetti samūhatā.",
  "thag17.2:1.149": "Sampādethappamādena,",
  "thag17.2:1.150": "esā me anusāsanī;",
  "thag17.2:1.151": "Handāhaṃ parinibbissaṃ,",
  "thag17.2:1.152": "vippamuttomhi sabbadhī”ti.",
  "thag17.2:1.153": "… Sāriputto thero …"
}