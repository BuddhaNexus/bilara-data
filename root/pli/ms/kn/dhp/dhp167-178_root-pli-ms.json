{
  "dhp167:^0.1": "Khuddakanikāya",
  "dhp167:^0.2": "Dhammapada",
  "dhp167:^0.3": "Lokavagga",
  "dhp167:0": "<span class=\"add\">Daharabhikkhuvatthu</span>",
  "dhp167:1": "Hīnaṃ dhammaṃ na seveyya,",
  "dhp167:2": "pamādena na saṃvase;",
  "dhp167:3": "Micchādiṭṭhiṃ na seveyya,",
  "dhp167:4": "na siyā lokavaḍḍhano.",
  "dhp168:0": "<span class=\"add\">Suddhodanavatthu</span>",
  "dhp168:1": "Uttiṭṭhe nappamajjeyya,",
  "dhp168:2": "dhammaṃ sucaritaṃ care;",
  "dhp168:3": "Dhammacārī sukhaṃ seti,",
  "dhp168:4": "asmiṃ loke paramhi ca.",
  "dhp169:1": "Dhammaṃ care sucaritaṃ,",
  "dhp169:2": "na naṃ duccaritaṃ care;",
  "dhp169:3": "Dhammacārī sukhaṃ seti,",
  "dhp169:4": "asmiṃ loke paramhi ca.",
  "dhp170:0": "<span class=\"add\">Pañcasatavipassakabhikkhuvatthu</span>",
  "dhp170:1": "Yathā pubbuḷakaṃ passe,",
  "dhp170:2": "yathā passe marīcikaṃ;",
  "dhp170:3": "Evaṃ lokaṃ avekkhantaṃ,",
  "dhp170:4": "maccurājā na passati.",
  "dhp171:0": "<span class=\"add\">Abhayarājakumāravatthu</span>",
  "dhp171:1": "Etha passathimaṃ lokaṃ,",
  "dhp171:2": "cittaṃ rājarathūpamaṃ;",
  "dhp171:3": "Yattha bālā visīdanti,",
  "dhp171:4": "natthi saṅgo vijānataṃ.",
  "dhp172:0": "<span class=\"add\">Sammajjanattheravatthu</span>",
  "dhp172:1": "Yo ca pubbe pamajjitvā,",
  "dhp172:2": "pacchā so nappamajjati;",
  "dhp172:3": "Somaṃ lokaṃ pabhāseti,",
  "dhp172:4": "abbhā muttova candimā.",
  "dhp173:0": "<span class=\"add\">Aṅgulimālattheravatthu</span>",
  "dhp173:1": "Yassa pāpaṃ kataṃ kammaṃ,",
  "dhp173:2": "kusalena pidhīyati;",
  "dhp173:3": "Somaṃ lokaṃ pabhāseti,",
  "dhp173:4": "abbhā muttova candimā.",
  "dhp174:0": "<span class=\"add\">Pesakāradhītāvatthu</span>",
  "dhp174:1": "Andhabhūto ayaṃ loko,",
  "dhp174:2": "tanukettha vipassati;",
  "dhp174:3": "Sakuṇo jālamuttova,",
  "dhp174:4": "appo saggāya gacchati.",
  "dhp175:0": "<span class=\"add\">Tiṃsabhikkhuvatthu</span>",
  "dhp175:1": "Haṃsādiccapathe yanti,",
  "dhp175:2": "ākāse yanti iddhiyā;",
  "dhp175:3": "Nīyanti dhīrā lokamhā,",
  "dhp175:4": "jetvā māraṃ savāhiniṃ.",
  "dhp176:0": "<span class=\"add\">Ciñcamāṇavikāvatthu</span>",
  "dhp176:1": "Ekaṃ dhammaṃ atītassa,",
  "dhp176:2": "musāvādissa jantuno;",
  "dhp176:3": "Vitiṇṇaparalokassa,",
  "dhp176:4": "natthi pāpaṃ akāriyaṃ.",
  "dhp177:0": "<span class=\"add\">Asadisadānavatthu</span>",
  "dhp177:1": "Na ve kadariyā devalokaṃ vajanti,",
  "dhp177:2": "Bālā have nappasaṃsanti dānaṃ;",
  "dhp177:3": "Dhīro ca dānaṃ anumodamāno,",
  "dhp177:4": "Teneva so hoti sukhī parattha.",
  "dhp178:0": "<span class=\"add\">Anāthapiṇḍikaputtakālavatthu</span>",
  "dhp178:1": "Pathabyā ekarajjena,",
  "dhp178:2": "saggassa gamanena vā;",
  "dhp178:3": "Sabbalokādhipaccena,",
  "dhp178:4": "sotāpattiphalaṃ varaṃ.",
  "dhp178:5": "Lokavaggo terasamo."
}